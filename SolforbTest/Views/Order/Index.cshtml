@model IEnumerable<Order>

@{
    ViewData["Title"] = "Order";
    var providers = (ViewData["Providers"] as List<Provider>);
}

<!-- Page Wrapper -->
<div id="wrapper">
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Order</h1>

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary d-inline-block">DataTables Example</h6>
                        <button class="btn btn-primary float-right mr-2 ml-2" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                            Filter
                        </button>
                        <a asp-controller="Order" asp-action="Create" class="btn btn-success float-right">Create</a>

                    </div>
                    <div class="card-body">
                        <div class="collapse mb-2" id="collapseExample">
                            <div class="card card-body">
                                <form asp-action="Create">
                                    <div class="form-row">
                                        <div class="form-group col-3">
                                            <label>Start date</label>
                                            <input type="datetime-local" id="search-startdate" class="form-control">
                                        </div>
                                        <div class="form-group col-3">
                                            <label>End date</label>
                                            <input type="datetime-local" id="search-enddate" class="form-control">
                                        </div>
                                        <div class="form-group col-3">
                                            <label>Number</label>
                                            <input type="text" id="search-number" class="form-control">
                                        </div>
                                        <div class="form-group col-3">
                                            <label>Order item name</label>
                                            <input type="text" id="search-orderitemname" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-3">
                                            <label>Unit</label>
                                            <input type="text" id="search-orderitemunit" class="form-control">
                                        </div>
                                        <div class="form-group col-3">
                                            <label>Provider name</label>
                                            <input type="text" id="search-providername" class="form-control">
                                        </div>
                                        @if (providers != null)
                                        {
                                            <div class="form-group col-6">
                                                <label>Provider</label>
                                                <select id="search-providerid" class="form-control">
                                                    <option value="0">Select</option>
                                                    @foreach (var item in providers)
                                                    {
                                                        <option value="@item.Id">@item.Name</option>
                                                    }
                                                </select>
                                            </div>
                                        }
                                    </div>
                                    <button type="button" id="search" class="btn btn-primary">Submit</button>
                                </form>
                            </div>
                        </div>
                        <div id="table-data">
                            @await Html.PartialAsync("~/Views/Shared/Partials/_TablePartial.cshtml", Model)
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->
